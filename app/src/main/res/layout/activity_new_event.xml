<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@drawable/bg_createevent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:text="As"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/host"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:text="I'm going for"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventType"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:text="at"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingRight="20dp"
                android:textColor="@android:color/white"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventLocation"/>

            <Button
                android:drawableTop="@drawable/hourglass"
                android:onClick="pickLocation"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/white"
                android:text="for about"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/duration"/>

            <TextView
                android:textColor="@android:color/white"
                android:text="minutes"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_margin="60dp"
        android:textColor="@android:color/white"
        android:background="#311a62"
        android:layout_alignParentBottom="true"
        android:id="@+id/submit"
        android:textAllCaps="false"
        android:text="Invite your colleagues"
        android:onClick="broadCastEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
